<script>
  <package>org.xmodel.net.nu.xaction</package>

  <assign var="onReceive">
    <script>
      <logi>format( '[CLIENT] Received:\n%s', $result)</logi>
    </script>
  </assign>

  <assign var="onError">
    <script>
      <logi>format( '[CLIENT] Error: %s', $error)</logi>
    </script>
  </assign>

  <assign var="onConnect">
    <script>
      <logi>'[CLIENT] Connected'</logi>
      
      <request var="result" via="$client" timeout="10000" onReceive="$onReceive">
        <script>
          <print>'Hi'</print>
        </script>
      </request>
    </script>
  </assign>
  
  <assign var="onDisconnect">
    <script>
      <logi>'[CLIENT] Disconnected'</logi>
    </script>
  </assign>

  <tcpClient var="client" remoteHost="'127.0.0.1'" remotePort="10000" connectTimeout="3000">
    <onConnect>$onConnect</onConnect>
    <onDisconnect>$onDisconnect</onDisconnect>
    <onError>$onError</onError>
  </tcpClient>
  
  <sleep>10000</sleep>
</script>