<script>
  <package>org.xmodel.net.nu.xaction</package>

  <executor var="worker" name="'worker'" thread="1"/>

  <assign var="send">
    <script>
      <logi>'[CLIENT] Send'</logi>

      <run var="result" via="$client" timeout="30000" retries="0">
        <return>101</return>
      </run>

      <print>$result</print>

      <request via="$client" timeout="10000" retries="0">$script</request>
      
      <run scheduler="$scheduler" delay="3000">$send</run>
    </script>
  </assign>

  <assign var="onReceive">
    <script in="transport, message">
      <run executor="$worker">
        <logi>format( '[CLIENT] Received:\n%s', $message)</logi>
        <print>$message</print>
      </run>
    </script>
  </assign>

  <assign var="onError">
    <script in="transport, error">
      <logi>format( '[CLIENT] Error: %s', $error)</logi>
    </script>
  </assign>

  <assign var="onConnect">
    <script in="transport">
      <logi>'[CLIENT] Connected'</logi>
      <register name="'bob'" via="$client" timeout="15000" retries="0" life="0"/>
    </script>
  </assign>
  
  <assign var="onDisconnect">
    <script in="transport">
      <logi>'[CLIENT] Disconnected'</logi>
    </script>
  </assign>

  <if test="true()">
    <amqpClient var="client" host="'192.168.1.4'" port="5672" connectTimeout="3000">
      <protocol>'xml'</protocol>
      <publishQueue>'server_recv'</publishQueue>
      <onConnect>$onConnect</onConnect>
      <onDisconnect>$onDisconnect</onDisconnect>
      <onReceive>$onReceive</onReceive>
      <onError>$onError</onError>
    </amqpClient>
  </if>
  <else>
    <tcpClient var="client" host="'127.0.0.1'" port="10000" connectTimeout="3000">
      <onConnect>$onConnect</onConnect>
      <onDisconnect>$onDisconnect</onDisconnect>
      <onReceive>$onReceive</onReceive>
      <onError>$onError</onError>
    </tcpClient>
  </else>
  
      
  <scheduler var="scheduler" threads="1"/>    
  <run scheduler="$scheduler" delay="3000">$send</run>
  
  <sleep>60000</sleep>
</script>
