<script>
  <package>org.xmodel.net.nu.xaction</package>

  <assign var="onReceive">
    <script>
      <logi>format( '[SERVER] Received:\n%s', $message)</logi>
      
      <run>$message</run>
      <exit>1</exit>
      
      <respond via="$via">
        <script>
          <print>'Hi'</print>
        </script>
      </respond>
    </script>
  </assign>

  <assign var="onError">
    <script>
      <logi>format( '[SERVER] Error:\n%s', $error)</logi>
    </script>
  </assign>

  <assign var="onConnect">
    <script>
      <logi>'[SERVER] Client connected'</logi>
    </script>
  </assign>
  
  <assign var="onDisconnect">
    <script>
      <logi>'[SERVER] Client disconnected'</logi>
    </script>
  </assign>
  
  <tcpServer var="server" bindHost="'127.0.0.1'" bindPort="10000" onReceive="$onReceive" onError="$onError" onConnect="$onConnect" onDisconnect="$onDisconnect"/>
</script>